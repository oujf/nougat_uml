            mDetector.onTouchEvent(event);
            
            // Handling single finger pan
            if (!mDetector.isInProgress()) {
                switch (event.getAction()) {
                    case MotionEvent.ACTION_DOWN:
                        mLastX = event.getX();
                        mLastY = event.getY();
                        break;
                        
                    case MotionEvent.ACTION_MOVE:
